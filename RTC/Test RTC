#include <Arduino.h>
#include "RTC.h"

DS1307 RTC;

void setup() {
    Serial.begin(9600);
    if (!RTC.begin()) {
        Serial.println("Erreur d'initialisation du module RTC");
        while (1);
    }
    RTC.setDate(1, 1, 2023); // Exemple: 1er janvier 2023
    RTC.setTime(12, 0, 0);   // Exemple: 12:00:00
}

void loop() {
    uint8_t day, month, year;
    uint8_t hours, minutes, seconds;
    RTC.getDate(day, month, year);
    Serial.print("Date: ");
    Serial.print(day);
    Serial.print(" ");
    switch (month) {
        case 1:
            Serial.print("janvier");
            break;
        case 2:
            Serial.print("février");
            break;
        case 3:
            Serial.print("mars");
            break;
        case 4:
            Serial.print("avril");
            break;
        case 5:
            Serial.print("mai");
            break;
        case 6:
            Serial.print("juin");
            break;
        case 7:
            Serial.print("juillet");
            break;
        case 8:
            Serial.print("août");
            break;
        case 9:
            Serial.print("septembre");
            break;
        case 10:
            Serial.print("octobre");
            break;
        case 11:
            Serial.print("novembre");
            break;
        case 12:
            Serial.print("décembre");
            break;
    }

    RTC.getDate(day, month, year);
    Serial.print("Date: ");
    Serial.print(day);
    Serial.print('/');
    Serial.print(month);
    Serial.print('/');
    Serial.println(year);

    RTC.getTime(hours, minutes, seconds);
    Serial.print("Time: ");
    Serial.print(hours);
    Serial.print(':');
    Serial.print(minutes);
    Serial.print(':');
    Serial.println(seconds);


    delay(10000);
}